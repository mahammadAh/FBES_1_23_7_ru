<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:v="clr-namespace:WPFNavigation.Views"
                    xmlns:vm="clr-namespace:WPFNavigation.ViewModels">

    <DataTemplate DataType="{x:Type vm:FirstScreenViewModel}">
        <v:FirstScreen/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:SecondScreenViewModel}">
        <v:SecondScreen/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:ThirdScreenViewModel}">
        <v:ThirdScreen/>
    </DataTemplate>
    
</ResourceDictionary>